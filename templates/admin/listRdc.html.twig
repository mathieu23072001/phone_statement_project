{% block body %}


 

<div class="row bg-title">
 
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Accueil admin</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-4 col-xs-12"> 
                    <o class="breadcrumb">
                        <li>administrateur </li>
                        <li class="active"> Liste des responsables de centre</li>
                    </o>
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
  

               



               <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box printableArea">
                            <h3 class="box-title m-b-0">Liste des agents de sante</h3>
                            <p class="text-muted m-b-30">Activez ou desactivez un responsable de centre</p>
                            <div class="table-responsive">
                                <table id="myTable" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th >Nom</th>
                                            <th >Prenoms</th>
                                            <th > adresse mail </th>
                                            <th > centre </th>
                                            <th> Etat </th>
                                            <th> Action </th>
                                            
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                    {% for result in result %}
                                        <tr>
                                            <td>{{result.nom}}</td>
                                            <td >{{result.prenoms}}</td>
                                            <td>{{result.email}}</td>
                                            <td>{{result.cds}}</td>
                                            <td>
                                            {% if result.etat == 1%}
                                             Actif
                                             {% else %}
                                             Inactif
                                            {% endif %}
                                            
                                            </td>

                                            <td>
                                            
                                             <div class="btn-group m-r-10">
                                           <button aria-expanded="false" data-toggle="dropdown" class="btn btn-info dropdown-toggle waves-effect waves-light" type="button">déroulez<span class="caret"></span></button>
                                    <ul role="menu" class="dropdown-menu animated flipInX">
                                        <li><a href="{{ path('admin_active_userRdc',{'id': result.id}) }}">Activé </a></li>
                                        <li><a href="{{ path('admin_desactive_userRdc',{'id': result.id}) }}">Desactivé </a></li>
                                       
                                       
                                    </ul>
                                            
                                            
                                            
                                            
                                            </td>
                                        </tr>
                                   
                                     {% endfor %}

                                    </tbody>
                                    
                                    
                                   
                                </table>
                            </div>     
                         




                        </div>

                        <button id="print" class="btn btn-rounded btn-sm btn-info" type="button"> <span><i class="fa fa-print"></i> Print</span> </button>
                    </div>
                  </div>
                  </div>
      
      
    











 {% endblock %}

 

