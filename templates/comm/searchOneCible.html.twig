{% extends "baseSupAd2.html.twig" %}

{% block stylesheets %} {{  parent() }} {% endblock %}

{% block title %} {{  parent() }} {% endblock %}

{% block javascript %} {{  parent() }} {% endblock %}


{% block body %}

<div class="row bg-title">
 
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">commissaire</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-4 col-xs-12"> 
                    <o class="breadcrumb">
                        <li><a href="{{path('comm_accueil')}}">accueil </a> </li>
                        <li class="active"> Détails de l'appel</li>
                    </o>
                </div>
                
                <!-- /.col-lg-12 -->
            </div>

{% if call %}

<div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title">Resultat des recherches de <B>{{num}}   {{nom}}</B> </h3>
                            <p class="text-muted">Liste des appels telephoniques</p>
                            <table class="table table-striped table-bordered" id="editable-datatable">
                                <thead>
                                    <tr>
                                       
                                        <th>date </th>
                                       
                                        <th>personne contact </th>
                                        <th> numero contact </th>
                                         <th>antenne cible</th>
                                       <th> autres infos </th>
                                        
                                        
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                {% for call in call %}
                                    <tr >

                                        
                                        <td>{{call.date|date("Y-m-d  H:i:s")}}</td>
                                        <td>{{call.personneTwo.nom}}</td>
                                        <td>{{call.personneTwo.contact}}</td>
                                        
                                         
                                        
                                         <td>{{call.antenne.nom}} </td>

                                         <td> 
                                         <div class="btn-group m-r-10">
                                           <button aria-expanded="false" data-toggle="dropdown" class="btn btn-info dropdown-toggle waves-effect waves-light" type="button">voir <span class="caret"></span></button>
                                    <ul role="menu" class="dropdown-menu animated flipInX">
                                        <li>sens appel : {{call.sensAppel}} </li>
                                        <li>type appel : {{call.typeAppel}}</li>
                                        <li>duree : {{call.duree}}</li>
                                        <li> imei : {{call.portable.imei}} </li>
                                        <li> imsi :{{call.portable.imsi}} </li>
                                       
                                    </ul>
                                     
                                      </div> 
                                         
                                         
                                         
                                         
                                         
                                         
                                         </td>
                                
        
                                
                                       
                                        
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        
                                        <th>date </th>
                                       
                                        <th> personne contact</th>
                                        <th> numero contact </th>
                                        <th>antenne cible</th>
                                        <th> autres infos</th>
                                        
                                       
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>


{% endif %}

 <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-info">
                            <div class="panel-heading"> Formulaire d'informations</div>
                            <div class="panel-wrapper collapse in" aria-expanded="true">
                                <div class="panel-body">
                                    <form action="{{path('comm_search_oneCible')}}" method ="post">
                                        <div class="form-body">
                                           
                                            <!--/row-->
                                            <h3 class="box-title m-t-40"> Rechercher les appels effectués par une personne cible</h3>
                                            <hr>
                                            <div class="row">
                                                <div class="col-md-12 ">
                                                    <div class="form-group">
                                                        <label>Numero</label>
                                                        <input type="text" name ="cible" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>date debut</label>
                                                        <input type="date" name ="debut" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>date fin</label>
                                                        <input type="date" name = "fin" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-->
                                            
                                        </div>
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-rounded btn-sm btn-success"> <i class="fa fa-check"></i> Rechercher</button>
                                            
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>








             <!-- /.row -->





                    </div>
                </div>
                <!--./row-->

 {% endblock %}